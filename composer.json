{
    "name": "bebat/verify",
    "description": "BDD assertion library for PHPUnit",
    "keywords": [
        "bdd", "assertions", "unit testing", "unit test", "phpunit", "codeception", "unit", "test", "testing"
    ],
    "homepage": "https://github.com/bbatsche/Verify",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Michael Bodnarchuk",
            "email": "davert.php@mailican.com"
        },
        {
            "name": "Ben Batschelet",
            "homepage": "http://github.com/bbatsche"
        }
    ],
    "support": {
        "issues": "https://waffle.io/bbatsche/verify",
        "docs": "http://bbatsche.github.io/Verify/"
    },
    "require": {
        "phpunit/phpunit": ">=4.3, <6.0",
        "php": ">=5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "mockery/mockery": "~0.9"
    },
    "replace": {
        "codeception/verify": "0.*"
    },
    "suggest": {
        "codeception/specify": "Highly readable test code blocks for PHPUnit and Codeception"
    },
    "autoload": {
        "files": ["src/function.php"],
        "psr-4": {
            "BeBat\\Verify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeBat\\Verify\\Test\\": "test"
        }
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix -v --allow-risky=yes --ansi --dry-run --diff",
        "cs-check-file": "php-cs-fixer fix -v --allow-risky=yes --ansi --dry-run --diff --path-mode=intersection",
        "cs-fix": "php-cs-fixer fix -v --allow-risky=yes --ansi",
        "test": "phpunit --colors=always"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
